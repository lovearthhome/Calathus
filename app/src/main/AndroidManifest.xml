<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zky.articleproj">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.wikicivi.app.ArticleAppliction"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.wikicivi.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.wikicivi.activity.MoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.wikicivi.activity.MusicPalyerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.wikicivi.activity.menu.About_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.wikicivi.activity.menu.follower.FollowerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.wikicivi.activity.menu.followee.FolloweeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.wikicivi.activity.menu.settings.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Douya" />

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name="com.wikicivi.activity.review.ReviewActivity"></activity>


        <activity
            android:name="com.kymjs.gallery.KJGalleryActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>