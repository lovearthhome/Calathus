<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_music_title"
        style="@style/ListTitieStyle"
        android:text="凤凰传奇-月亮" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center">

        <co.mobiwise.playerview.MusicPlayerView
            android:id="@+id/mpv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:buttonColor="#99FF0028"
            app:cover="@drawable/mycover"
            app:progressEmptyColor="#20FFFFFF"
            app:progressLoadingColor="#80FFFFFF"
            app:progressLoadedColor="#99660066"
            app:textColor="#80FFFFFF"
            app:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>
